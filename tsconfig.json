{
	"compilerOptions": {
		"lib": ["ES2020"], // ES2020 in earlier versions
		"module": "ESNext", //ESNext
		"moduleResolution": "Node",
		"target": "ES2020", // ES2020 in earlier versions
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"]
		}
	},
	"ts-node": {
		"swc": true,
		"esm": true,
		"files": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
